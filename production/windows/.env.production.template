# ================================================================
# APPLICATION ENVIRONMENT
# ================================================================
NODE_ENV=production
PORT=3001
APP_NAME=SkyRakSys HRM
APP_VERSION=1.0.0
APP_URL=https://yourdomain.com

# ================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ================================================================
# These are the default passwords set during installation
# Change immediately after setup completion

DB_HOST=localhost
DB_PORT=5432
DB_NAME=skyraksys_hrm_prod
DB_USER=hrm_prod_user
DB_PASSWORD=HRM_Prod_2024!Database

# PostgreSQL Admin (for setup scripts only)
POSTGRES_ADMIN_USER=postgres
POSTGRES_ADMIN_PASSWORD=SkyRakSys2024!PostgreSQL

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=60000

# ================================================================
# AUTHENTICATION & SECURITY
# ================================================================
# JWT Configuration with production-strength secrets

JWT_SECRET=SkyRakSys_HRM_2024_JWT_Secret_Key_Production_64_Characters_Min
JWT_REFRESH_SECRET=SkyRakSys_HRM_2024_Refresh_Token_Secret_Production_Key_64_Chars
JWT_EXPIRE_TIME=1h
JWT_REFRESH_EXPIRE_TIME=7d

# Session Configuration
SESSION_SECRET=SkyRakSys_HRM_2024_Session_Secret_Production_Key_Change_This
SESSION_EXPIRE_TIME=24h

# Password Hashing
BCRYPT_ROUNDS=12

# Encryption Keys
ENCRYPTION_KEY=SkyRakSys_HRM_2024_Data_Encryption_Key_32_Characters
ENCRYPTION_IV=SkyRakSys_2024_IV_16

# ================================================================
# DEFAULT ADMIN ACCOUNTS
# ================================================================
# These accounts are created during initial setup
# CRITICAL: Change these passwords immediately after installation

# System Administrator
ADMIN_EMAIL=admin@skyraksys.com
ADMIN_PASSWORD=SkyRakSys@Admin2024!
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# HR Manager
HR_EMAIL=hr@skyraksys.com
HR_PASSWORD=SkyRakSys@HR2024!
HR_FIRST_NAME=HR
HR_LAST_NAME=Manager

# Project Manager
MANAGER_EMAIL=manager@skyraksys.com
MANAGER_PASSWORD=SkyRakSys@Manager2024!
MANAGER_FIRST_NAME=Project
MANAGER_LAST_NAME=Manager

# ================================================================
# REDIS CONFIGURATION
# ================================================================
# Used for session storage and caching

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=SkyRakSys@Redis2024!
REDIS_DB=0
REDIS_TTL=3600

# Redis Connection Pool
REDIS_POOL_SIZE=10
REDIS_RETRY_ATTEMPTS=3

# ================================================================
# EMAIL SERVICE CONFIGURATION
# ================================================================
# SMTP settings for notifications and password resets

# Email Service Provider Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@skyraksys.com
SMTP_PASSWORD=SkyRakSys@Email2024!

# Gmail App Password (if using Gmail)
GMAIL_APP_PASSWORD=generated_gmail_app_password_here

# Email Templates
EMAIL_FROM_NAME=SkyRakSys HRM System
EMAIL_FROM_ADDRESS=noreply@skyraksys.com
EMAIL_REPLY_TO=support@skyraksys.com

# Email Features
EMAIL_VERIFICATION_REQUIRED=true
EMAIL_RESET_TOKEN_EXPIRE=1h
EMAIL_QUEUE_ENABLED=true

# ================================================================
# FILE STORAGE CONFIGURATION
# ================================================================
# Local and cloud storage settings

# Local File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=AKIA_EXAMPLE_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=example_secret_access_key_change_this
AWS_REGION=us-east-1
S3_BUCKET_NAME=skyraksys-hrm-prod-files

# ================================================================
# LOGGING CONFIGURATION
# ================================================================
# Application logging settings

LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7
LOG_DATE_PATTERN=YYYY-MM-DD

# Error Tracking
ERROR_LOG_FILE=./logs/error.log
ACCESS_LOG_FILE=./logs/access.log

# Debug Mode (disable in production)
DEBUG_MODE=false
DEBUG_SQL=false

# ================================================================
# SECURITY CONFIGURATION
# ================================================================
# Rate limiting and security headers

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE="Too many requests, please try again later"

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Security Headers
HELMET_ENABLED=true
HTTPS_ONLY=true
SECURITY_HEADERS=true

# API Security
API_KEY_REQUIRED=false
API_RATE_LIMIT=1000
WEBHOOK_SECRET=SkyRakSys_Webhook_Secret_2024_Change_This

# ================================================================
# SSL/TLS CONFIGURATION
# ================================================================
# HTTPS and certificate settings

# SSL Certificate
SSL_ENABLED=true
SSL_CERT_PATH=./ssl/certificate.crt
SSL_KEY_PATH=./ssl/private.key
SSL_CA_PATH=./ssl/ca_bundle.crt

# SSL Password (if private key is encrypted)
SSL_PRIVATE_KEY_PASSWORD=SkyRakSys@SSL2024!

# ================================================================
# BACKUP CONFIGURATION
# ================================================================
# Database and file backup settings

# Backup Schedule
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Backup Storage
BACKUP_LOCAL_PATH=./backups
BACKUP_ENCRYPTION_PASSWORD=SkyRakSys@BackupEncryption2024!

# Remote Backup (FTP)
BACKUP_FTP_HOST=backup.yourdomain.com
BACKUP_FTP_USER=hrm_backup_user
BACKUP_FTP_PASSWORD=SkyRakSys@Backup2024!

# ================================================================
# MONITORING & HEALTH CHECKS
# ================================================================
# Application monitoring configuration

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TOKEN=SkyRakSys_Health_Check_Token_2024_Change_This
HEALTH_CHECK_INTERVAL=30

# Performance Monitoring
