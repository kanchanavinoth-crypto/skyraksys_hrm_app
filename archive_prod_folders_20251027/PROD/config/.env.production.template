# ============================================
# SkyRakSys HRM - Production Environment Template
# ============================================
# Copy this file to .env and update with your production values

# ============================================
# BASIC CONFIGURATION
# ============================================

# Application Environment
NODE_ENV=production
PORT=8080

# Domain Configuration
DOMAIN=yourdomain.com
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://yourdomain.com/api

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=skyraksys_hrm_prod
DB_USER=hrm_prod_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false

# Database Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=30000

# ============================================
# SECURITY CONFIGURATION
# ============================================

# JWT Secrets (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_JWT_KEY_MINIMUM_64_CHARACTERS_LONG
JWT_REFRESH_SECRET=CHANGE_THIS_SUPER_SECRET_REFRESH_KEY_MINIMUM_64_CHARACTERS_LONG
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Password Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_WINDOW_MS=900000
RATE_LIMIT_LOGIN_MAX_REQUESTS=5

# Session Configuration
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_MINIMUM_32_CHARACTERS
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# ============================================
# CORS CONFIGURATION
# ============================================

CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================

UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
UPLOAD_TEMP_DIR=uploads/temp

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Templates
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=SkyRakSys HRM

# ============================================
# LOGGING CONFIGURATION
# ============================================

LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Enable different log types
LOG_CONSOLE=false
LOG_FILE_ENABLED=true
LOG_ERROR_FILE=logs/error.log
LOG_COMBINED_FILE=logs/combined.log

# ============================================
# SSL CONFIGURATION
# ============================================

SSL_ENABLED=true
SSL_CERT_PATH=ssl/cert.pem
SSL_KEY_PATH=ssl/key.pem
SSL_CA_PATH=ssl/ca.pem

# ============================================
# REDIS CONFIGURATION (Optional)
# ============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CLUSTER=false

# ============================================
# MONITORING CONFIGURATION
# ============================================

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Performance Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=skyraksys-hrm
APM_SERVER_URL=

# ============================================
# BACKUP CONFIGURATION
# ============================================

BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# ============================================
# NOTIFICATION CONFIGURATION
# ============================================

# Slack Notifications
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts

# Email Alerts
ALERT_EMAIL=admin@yourdomain.com

# ============================================
# EXTERNAL SERVICES
# ============================================

# Payment Gateway (if applicable)
PAYMENT_GATEWAY_API_KEY=
PAYMENT_GATEWAY_SECRET=
PAYMENT_GATEWAY_WEBHOOK_SECRET=

# Cloud Storage (if applicable)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ============================================
# DEVELOPMENT OVERRIDES
# ============================================
# Uncomment for development/staging environments

# NODE_ENV=development
# LOG_LEVEL=debug
# LOG_CONSOLE=true
# SSL_ENABLED=false
# CORS_ORIGIN=http://localhost:3000
# DB_SSL=false

# ============================================
# DOCKER SPECIFIC
# ============================================
# These are used when running with Docker

# PostgreSQL Admin (for pgAdmin)
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=admin123

# Monitoring (for Grafana)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

