# =======================================================
# SkyRakSys HRM Production Environment Configuration
# =======================================================
# Copy this file to .env and configure the values
# Keep this file secure and never commit it to version control

# ===============================
# Application Configuration
# ===============================
NODE_ENV=production
APP_VERSION=2.0.0
APP_NAME=SkyRakSys HRM

# ===============================
# Server Configuration
# ===============================
PORT=8080
FRONTEND_PORT=3000
HEALTH_CHECK_PORT=3001

# Domain and URLs (Update for production)
DOMAIN=localhost
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8080
API_BASE_URL=http://localhost:8080/api

# ===============================
# Database Configuration
# ===============================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=skyraksys_hrm
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Database SSL (set to true for cloud databases)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# ===============================
# Authentication & Security
# ===============================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Session Configuration
SESSION_SECRET=your_session_secret_change_this_in_production
SESSION_TIMEOUT=24h

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_WINDOW=15
LOGIN_RATE_LIMIT_MAX_REQUESTS=5

# ===============================
# Redis Configuration (Optional)
# ===============================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Enable Redis for sessions and caching
REDIS_ENABLED=false

# ===============================
# File Upload Configuration
# ===============================
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
UPLOAD_PATH=./uploads
UPLOAD_TEMP_PATH=./temp

# ===============================
# Email Configuration
# ===============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_NAME=SkyRakSys HRM
SMTP_FROM_EMAIL=noreply@yourcompany.com

# Email Features
EMAIL_ENABLED=false
EMAIL_VERIFICATION_REQUIRED=false
PASSWORD_RESET_ENABLED=true
PASSWORD_RESET_EXPIRE=1h

# ===============================
# Logging Configuration
# ===============================
LOG_LEVEL=info
LOG_FILE=true
LOG_CONSOLE=true
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Application Logs
LOG_DIR=./logs
ERROR_LOG_FILE=error.log
ACCESS_LOG_FILE=access.log
COMBINED_LOG_FILE=combined.log

# ===============================
# Security Headers
# ===============================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline' 'unsafe-eval'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data: https:
CSP_FONT_SRC='self'

# ===============================
# Backup Configuration
# ===============================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups
BACKUP_COMPRESSION=gzip

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_FORMAT=sql

# File Backup
FILE_BACKUP_ENABLED=true
FILE_BACKUP_INCLUDE=uploads,logs

# ===============================
# Monitoring & Health Checks
# ===============================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Performance Monitoring
PERFORMANCE_MONITORING=true
MEMORY_THRESHOLD=1024
CPU_THRESHOLD=80
DISK_THRESHOLD=90

# ===============================
# SSL/TLS Configuration
# ===============================
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/server.crt
SSL_KEY_PATH=./ssl/server.key
SSL_CA_PATH=./ssl/ca.crt

# Let's Encrypt (for automatic SSL)
LETSENCRYPT_ENABLED=false
LETSENCRYPT_EMAIL=admin@yourcompany.com
LETSENCRYPT_DOMAINS=yourapp.com,www.yourapp.com

# ===============================
# Docker Configuration
# ===============================
DOCKER_ENABLED=false
DOCKER_COMPOSE_FILE=docker-compose.yml
DOCKER_NETWORK=skyraksys-network

# Container Settings
POSTGRES_CONTAINER=skyraksys-postgres
REDIS_CONTAINER=skyraksys-redis
BACKEND_CONTAINER=skyraksys-backend
FRONTEND_CONTAINER=skyraksys-frontend

# ===============================
# Development Settings
# ===============================
# Set to true only in development
DEBUG=false
VERBOSE_LOGGING=false
MOCK_DATA_ENABLED=false
HOT_RELOAD=false

# API Documentation
API_DOCS_ENABLED=false
API_DOCS_PATH=/api-docs

# ===============================
# Feature Flags
# ===============================
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_FILE_UPLOADS=true
FEATURE_AUDIT_LOGS=true
FEATURE_EXPORT_DATA=true
FEATURE_BULK_OPERATIONS=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_REPORTING=true

# ===============================
# Integration Settings
# ===============================
# External API integrations
EXTERNAL_API_ENABLED=false
EXTERNAL_API_KEY=
EXTERNAL_API_URL=

# Webhook Configuration
WEBHOOK_ENABLED=false
WEBHOOK_SECRET=
WEBHOOK_URL=

# ===============================
# Caching Configuration
# ===============================
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=100
CACHE_TYPE=memory

# API Response Caching
API_CACHE_ENABLED=false
API_CACHE_TTL=60

# ===============================
# Timezone & Localization
# ===============================
TIMEZONE=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr

# Date/Time Formats
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm:ss
DATETIME_FORMAT=YYYY-MM-DD HH:mm:ss

# ===============================
# Company Information
# ===============================
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=Your Company Address
COMPANY_PHONE=+1-234-567-8900
COMPANY_EMAIL=info@yourcompany.com
COMPANY_WEBSITE=https://www.yourcompany.com

# ===============================
# Payroll Configuration
# ===============================
PAYROLL_ENABLED=true
PAYROLL_CURRENCY=USD
PAYROLL_TAX_RATE=0.15
PAYROLL_OVERTIME_RATE=1.5

# Pay Periods
PAY_PERIOD_TYPE=monthly
PAY_PERIOD_START_DAY=1

# ===============================
# Notification Settings
# ===============================
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS=false
SMS_NOTIFICATIONS=false
PUSH_NOTIFICATIONS=false

# SMS Configuration (optional)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=
SMS_AUTH_TOKEN=
SMS_FROM_NUMBER=

# ===============================
# Analytics & Reporting
# ===============================
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=
REPORTING_ENABLED=true
REPORT_GENERATION_TIMEOUT=60

# ===============================
# Maintenance Mode
# ===============================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance. Please try again later.
MAINTENANCE_ALLOWED_IPS=127.0.0.1

# ===============================
# Environment-Specific Overrides
# ===============================
# These will be set by deployment scripts
DEPLOYMENT_DATE=
DEPLOYMENT_VERSION=
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_BRANCH=main
