# Production Environment Configuration Template
# Copy this to .env.production for production deployment

# ==========================================
# SERVER CONFIGURATION
# ==========================================
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# API Configuration
API_BASE_URL=https://your-domain.com/api
DOMAIN=your-domain.com

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=skyraksys_hrm_prod
DB_USER=your-db-user
DB_PASSWORD=your-secure-password
DB_SSL=true

# Connection Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=30000

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters
JWT_EXPIRES_IN=8h
BCRYPT_ROUNDS=12

# CORS Settings
CORS_ORIGIN=https://your-frontend-domain.com

# ==========================================
# MONITORING & PERFORMANCE
# ==========================================
# Status Monitor (disable on Windows servers)
ENABLE_STATUS_MONITOR=false

# Logging
LOG_LEVEL=info
LOG_FILE=true
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# FEATURES
# ==========================================
# Demo Data (always disable in production)
SEED_DEMO_DATA=false

# File Uploads
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# Email Configuration
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password

# ==========================================
# PRODUCTION OPTIMIZATIONS
# ==========================================
# Database
DATABASE_SYNC=false
RUN_MIGRATIONS=true

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=true

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# ==========================================
# WINDOWS SERVER SPECIFIC
# ==========================================
# If deploying on Windows Server, ensure these are set:
ENABLE_STATUS_MONITOR=false
LOG_CONSOLE=false
PROCESS_TITLE=skyraksys-hrm-server