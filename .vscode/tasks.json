{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "start-backend",
			"type": "shell",
			"command": "node",
			"args": [
				"server.js"
			],
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"problemMatcher": []
		},
		{
			"label": "start-frontend",
			"type": "shell",
			"command": "npm",
			"args": [
				"start"
			],
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": []
		}
	]
}