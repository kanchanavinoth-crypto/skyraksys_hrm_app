{
  "name": "skyraksys-hrm-backend",
  "version": "1.0.0",
  "description": "Human Resources Management System Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest",
    "migrate": "npx sequelize-cli db:migrate",
    "seed": "npx sequelize-cli db:seed:all",
    "db:create": "npx sequelize-cli db:create",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:seed:undo": "npx sequelize-cli db:seed:undo:all",
    "db:reset": "npm run db:seed:undo && npm run db:migrate:undo && npm run db:migrate && npm run db:seed",
    "setup": "npm install && npm run db:create && npm run db:migrate && npm run db:seed",
    "setup:postgres": "npm install pg pg-hstore && npm run db:migrate && npm run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "postgres:setup": "node ../migrate-to-postgres.js",
    "db:backup": "node scripts/database/backup.js",
    "db:restore": "node scripts/database/restore.js",
    "db:test-connection": "node scripts/database/test-connection.js",
    "seed:minimal": "NODE_ENV=development SEED_TYPE=minimal npm run db:seed",
    "seed:full": "NODE_ENV=development SEED_TYPE=full npm run db:seed",
    "seed:test": "NODE_ENV=test npm run db:seed",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "clean": "rimraf dist coverage",
    "security-check": "npm audit && npm outdated",
    "db:validate": "node scripts/database/validate-seeders.js",
    "db:status": "npx sequelize-cli db:migrate:status",
    "db:diagram": "npm run db:diagram:generate && npm run db:diagram:view",
    "db:diagram:generate": "sequelize-erd --source ./models --destination ./docs/database-diagram.svg",
    "db:diagram:view": "start ./docs/database-diagram.svg",
    "db:check": "npm run db:test-connection && npm run db:status && npm run db:validate",
    "db:maintenance": "node scripts/database/maintenance.js",
    "db:optimize": "node scripts/database/optimize.js"
  },
  "dependencies": {
    "@hapi/hoek": "^11.0.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dayjs": "^1.11.18",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.3",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.1",
    "pdfkit-table": "^0.1.99",
    "sanitize-html": "^2.17.0",
    "sequelize": "^6.35.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "axios": "^1.11.0",
    "colors": "^1.4.0",
    "dotenv": "^17.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "puppeteer": "^24.16.0",
    "rimraf": "^6.0.1",
    "sequelize-cli": "^6.6.3",
    "sequelize-erd": "^1.3.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "hrm",
    "human-resources",
    "payroll",
    "timesheet",
    "leave-management",
    "nodejs",
    "express",
    "sequelize",
    "sqlite"
  ],
  "author": "SkyRakSys",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skyraksys/hrm-system.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
