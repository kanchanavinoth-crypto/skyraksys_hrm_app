{
  "name": "skyraksys-hrm-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for SkyRakSys HRM application",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile",
    "test:all": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:auth": "playwright test tests/auth/",
    "test:employee": "playwright test tests/employee/",
    "test:timesheet": "playwright test tests/timesheet/",
    "test:payroll": "playwright test tests/payroll/",
    "test:leave": "playwright test tests/leave/",
    "report": "playwright show-report",
    "report:open": "playwright show-report",
    "codegen": "playwright codegen http://localhost:3000",
    "install:browsers": "playwright install",
    "trace": "playwright show-trace"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "dotenv": "^16.3.1"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "automation"
  ],
  "author": "SkyRakSys Team",
  "license": "ISC"
}
