{
  "name": "hrm-production-migration-package",
  "version": "1.0.0",
  "description": "Production Migration Deployment Package for HRM System",
  "main": "production-migration-runner.js",
  "scripts": {
    "prod:migrate": "node production-migration-runner.js",
    "prod:migrate:dry-run": "node production-migration-runner.js --dry-run",
    "prod:verify": "node verify-field-mappings.js",
    "prod:deploy": "deploy-production-migrations.bat",
    "prod:deploy:dry": "deploy-production-migrations.bat --dry-run",
    "prod:deploy:force": "deploy-production-migrations.bat --force"
  },
  "keywords": ["production", "migration", "deployment", "hrm", "sequelize"],
  "author": "HRM Development Team",
  "license": "ISC",
  "dependencies": {
    "colors": "^1.4.0",
    "sequelize": "^6.x.x",
    "pg": "^8.x.x"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "config": {
    "backup_retention_days": 30,
    "max_migration_time_minutes": 10,
    "verification_timeout_seconds": 60
  },
  "deployment": {
    "production": {
      "requires_backup": true,
      "requires_verification": true,
      "rollback_enabled": true,
      "max_downtime_minutes": 5
    }
  }
}